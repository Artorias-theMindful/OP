        <TextBox x:Name="newpassword1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Margin="569,75,0,0"/>
        <TextBox x:Name="newpassword2" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Margin="419,103,0,0"/>
