        <Label x:Name="Name" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="359,162,0,0" Height="26" Width="145"/>
        <Label  Content="Фамілія" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="299,193,0,0" Height="26" Width="50"/>
        <Label x:Name="Surname" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="359,193,0,0" Height="26" Width="145"/>
        <Label  Content="Логін" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="571,162,0,0" Height="26" Width="39"/>
        <Label x:Name="Login" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="626,162,0,0" Height="26" Width="145"/>
        <Label  Content="Статус" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="571,193,0,0" Height="26" Width="50"/>
        <Label x:Name="Status" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="626,193,0,0" Height="26" Width="145"/>
        <Label Content="Обмеження на пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="410,224,0,0" Height="26" Width="161"/>
        <Label x:Name="Restriction" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="559,224,0,0" Height="26" Width="145"/>
        <Button Content="Попередній" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="304,224,0,0" Height="26" Click="Button_Click"/>
        <Button Content="Наступний" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="709,224,0,0" Height="26" Click="Button_Click_1"/>
        <Label Content="Додати користувача" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="305,255,0,0" Width="144"/>
        <TextBox x:Name="NewMember" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Margin="304,286,0,0"/>
        <Button Content="Додати" HorizontalAlignment="Left" VerticalAlignment="Top" Width="144" Margin="305,314,0,0" Click="Button_Click_2"/>
        <Button Content="Вийти з системи" HorizontalAlignment="Left" VerticalAlignment="Top" Width="144" Margin="305,338,0,0" Click="Button_Click_3"/>
        <Label Content="Користувач" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="559,255,0,0" Width="78"/>
        <ComboBox x:Name="MembersList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="142" Margin="642,258,0,0" SelectionChanged="MembersList_SelectionChanged"/>
        <CheckBox x:Name="StatusCheck" Content="Активність" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="581,300,-0.4,0" Width="213"/>
        <CheckBox x:Name="RestrictionCheck" Content="Обмеження" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="581,322,-0.4,0" Width="213"/>
        <Button Content="встановити" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="709,297,0,0" Height="20" Click="Button_Click_4"/>
        <Button Content="встановити" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="709,322,0,0" Height="21" Click="Button_Click_5"/>
        <Button Content="Закрити вікно" HorizontalAlignment="Left" VerticalAlignment="Top" Width="330" Margin="454,391,0,0" Click="Button_Click_6"/>
